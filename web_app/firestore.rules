rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for sessions collection
    match /sessions/{sessionId} {
      // Allow read/write only if the session exists and the user is authenticated
      allow read, write: if isAuthenticated() && isSessionCreator(sessionId);
    }

    // Rule for messages subcollection within a session
    match /sessions/{sessionId}/messages/{messageId} {
      // Allow read/write only if the session exists and the user is authenticated
      allow read, write: if isAuthenticated() && isSessionCreator(sessionId);
    }

    // Rule for sketches subcollection within a session
    match /sessions/{sessionId}/sketches/{sketchId} {
      // Allow read/write only if the session exists and the user is authenticated
      allow read, write: if isAuthenticated() && isSessionCreator(sessionId);
    }

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the creator of the session
    function isSessionCreator(sessionId) {
      // Get the session document
      return get(/databases/$(database)/documents/sessions/$(sessionId)).data.creatorId == request.auth.uid;
    }
  }
}